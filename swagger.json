{
  "openapi": "3.0.0",
  "info": {
    "title": "App Register Documentation",
    "description": "This is a Rest API of the application about user registration",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "fmaycon@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Create a user",
        "description": "Create a new user in application and return error if user already exists exists",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "name": "John Doe",
                "email": "john_doe@example.com"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "example": {
                  "name": "John Doe",
                  "email": "john_doe@example.com",
                  "admin": false
                }
              }
            }
          },
          "400": {
            "description": "Already exist a user to this email",
            "content": {
              "application/json": {
                "example": {
                  "error": "User Already Exists"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "User"
        ],
        "summary": "List users",
        "description": "List all user if user request is admin",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "description": "String with user_id of the admin user",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "allowEmptyValue": false
          }
        ],
        "responses": {
          "200": {
            "description": "list user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "admin": false,
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "update_at": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Already exist a user to this email",
            "content": {
              "application/json": {
                "example": {
                  "error": "User not found or not is admin"
                }
              }
            }
          }
        }
      }
    }
  }
}